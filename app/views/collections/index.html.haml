- page_title = title(t('collection_plural').capitalize)

#content.section--primary{ tabindex: "0" }
  .container
    %h1= page_title

%section
  .container
    %ul.list--block
      - @collections.each do |collection|
        %li
          .list--details
            %h2= link_to(collection.name, collection_path(collection.graph_id))
            %p= collection.description
